{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react",
    "jsxFactory": "h",
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "target": "ES6",
    "experimentalDecorators": true
  },
  "include": ["**/*", "utils/**/*"],
  "exclude": ["node_modules"]
}
